{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "RTodo",
  "version": "0.1.0",
  "identifier": "com.rtodo.app",
  "build": {
    "beforeDevCommand": "powershell -Command \"cd ../frontend; npm run dev\"",
    "beforeBuildCommand": "powershell -Command \"cd ../frontend; npm run build\"",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "RTodo",
        "width": 1000,
        "height": 760,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 560
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true,
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": false,
    "icon": []
  }
}
