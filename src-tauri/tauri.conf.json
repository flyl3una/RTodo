{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "RTodo",
  "version": "0.1.1",
  "identifier": "com.rtodo.app",
  "build": {
    "beforeDevCommand": "cd ../frontend && npm run dev",
    "beforeBuildCommand": "cd ../frontend && npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "RTodo",
        "width": 1000,
        "height": 760,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 560,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "RTodo Team",
    "copyright": "Copyright Â© 2025 RTodo Team. All rights reserved.",
    "category": "Productivity",
    "shortDescription": "A cross-platform Todo application",
    "longDescription": "RTodo is a powerful cross-platform todo application built with Tauri and Vue 3, featuring task management, groups, tags, and statistics.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["zh-CN", "en-US"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
