{
  "name": "rtodo-build",
  "version": "1.0.0",
  "description": "Build scripts for RTodo cross-platform application (Python-based)",
  "scripts": {
    "build": "python build/build.py",
    "build:win": "python build/build.py -p windows",
    "build:linux": "python build/build.py -p linux",
    "build:mac": "python build/build.py -p macos",
    "build:all": "python build/build.py --all-platforms",
    "build:win-arm64": "python build/build.py -p windows -a arm64",
    "build:mac-arm64": "python build/build.py -p macos -a arm64",
    "build:mac-universal": "python build/build.py -p macos -a universal"
  },
  "keywords": [
    "tauri",
    "build",
    "cross-platform",
    "python"
  ],
  "author": "RTodo Team",
  "license": "MIT"
}
